<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools"
    android:background="@drawable/bg_play_song_default"
    android:id="@+id/rl_play_song"
    android:paddingTop="24dp">

    <RelativeLayout
        android:id="@+id/action_bar_play"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center">
        <ImageView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_btn_back"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <ImageView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_btn_alarm"
            android:src="@drawable/ic_alarm_white_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_btn_back"
            android:layout_toLeftOf="@id/iv_btn_alarm"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_play_song_title"
                android:text="Nothing change"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_play_song_artist"
                android:text="maroon five"
                android:textSize="12sp"
                android:textColor="@color/colorTextGray"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>
    <com.rd.PageIndicatorView
        android:layout_marginTop="10dp"
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/gray_50"
        app:piv_unselectedColor="@color/gray_300"
        app:piv_viewPager="@id/view_page_play"
        attrs:piv_padding="12dp"
        attrs:piv_radius="6dp"
        android:layout_below="@id/action_bar_play"/>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_page_play"
        android:layout_below="@id/pageIndicatorView"
        android:layout_above="@id/bottom_music_frame">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/bottom_music_frame"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_time"
                android:textColor="@color/colorText"
                android:layout_marginLeft="15dp"
                android:text="00:00" />
            <SeekBar
                android:id="@+id/sb_in_song_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_current_time"
                android:layout_toLeftOf="@id/tv_duration_play"
                android:progressDrawable="@drawable/seek_bar_theme"
                android:maxHeight="1dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_duration_play"
                android:textColor="@color/colorText"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="04:01"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_skip_pre"
                android:src="@drawable/ic_skip_previous_black_24dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_play_pause"
                android:src="@drawable/play_pause_state"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_skip_next"
                android:src="@drawable/ic_skip_next_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>