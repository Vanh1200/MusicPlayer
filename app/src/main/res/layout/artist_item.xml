<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/iv_artist_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="12sp"
        android:padding="6dp"
        android:src="@drawable/ic_music_note_white_24dp"
        android:background="@drawable/bg_song_icon" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:text="bao thy"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/playlist"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_artist_album_nubmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="#5d5d5d"
                android:text="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#5d5d5d"
                android:layout_marginLeft="2dp"
                android:text="@string/albums"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_song_disk"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_artist_song_nubmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="#5d5d5d"
                android:text="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#5d5d5d"
                android:layout_marginLeft="2dp"
                android:text="@string/songs"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>