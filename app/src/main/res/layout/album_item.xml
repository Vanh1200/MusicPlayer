<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="2dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_grid_album"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_music_album_final"/>
        <ImageView
            android:id="@+id/iv_gradient_listener"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@drawable/bg_gradient_listener"
            android:layout_alignBottom="@id/iv_grid_album"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@id/iv_grid_album">
            <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_headphone"/>
            <TextView
                android:id="@+id/tv_number_listener"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_play_music"
            android:src="@drawable/ic_play_song"
            android:layout_alignBottom="@id/iv_grid_album"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_album_name"
        android:textColor="#000"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="nothing in your eye kaka"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_album_artist"
        android:textColor="#3d3d3d"
        android:maxLines="1"
        android:textSize="13sp"
        android:layout_marginLeft="3dp"
        android:text="onlyC"/>

</LinearLayout>